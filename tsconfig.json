{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "ES2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@navigation": ["navigation/index"],
      "@navigation/*": ["navigation/*"],
      "@config/*": ["config/*"],
      "@consts/*": ["consts/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@interfaces/*": ["interfaces/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@styles": ["styles/index"],
      "@styles/*": ["styles/*"],
      "@utils": ["utils/index"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@HOCs/*": ["HOCs/*"],
      "@redux/*": ["redux/*"],
      "@types": ["types/index"],
      "@types/*": ["types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
